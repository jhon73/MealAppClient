<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_row_order_"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_login"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_50sdp" />
                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_50sdp">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/txt_row_order_meal_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:text="Pizza Masti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/bg"
                    android:textSize="@dimen/_10ssp"
                    android:text="navarangpura, Ahemedabad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                    <TextView
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/bg"
                        android:textSize="@dimen/_9ssp"
                        android:text="15th june, 2017"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <!--<TextView-->
                    <!--android:layout_marginTop="@dimen/_28sdp"-->
                    <!--android:textStyle="bold"-->
                    <!--android:id="@+id/txt_row_order_price"-->
                    <!--android:textColor="@color/green_dark"-->
                    <!--android:textSize="@dimen/_15ssp"-->
                    <!--android:gravity="center"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:text="$25.50"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->


            </LinearLayout>
                <ImageView
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_forward_arrow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp" />

                <RatingBar
                    android:layout_below="@+id/ll_row_order_"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:id="@+id/ratingbar_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stepSize="0.5"
                    android:numStars="5"
                    android:rating="4.5"
                    android:layout_gravity="start"
                    android:theme="@style/RatingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"/>

                <TextView
                    android:textSize="@dimen/_10sdp"
                    android:text="44 mins"
                    android:id="@+id/txt_time_order_history"
                    android:layout_marginStart="@dimen/_90sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_below="@+id/ll_row_order_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView

                    android:textSize="@dimen/_10sdp"
                    android:text="500 for Two"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_toRightOf="@+id/txt_time_order_history"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_below="@+id/ll_row_order_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_7sdp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>