                <!--android:layout_weight="25"-->
                <!--android:src="@drawable/google_plus"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content" />-->
            <!--<ImageView-->
                <!--android:layout_weight="25"-->
                <!--android:src="@drawable/instagram"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content" />-->
            <!--<ImageView-->
                <!--android:layout_weight="25"-->
                <!--android:src="@drawable/twitter"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content" />-->
        <!--</LinearLayout>-->

    </LinearLayout>

</RelativeLayout>
</layout>