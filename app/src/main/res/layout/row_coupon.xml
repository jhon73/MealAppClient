<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:id="@+id/ll_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/img_coupon_icon"
                android:scaleType="fitXY"
                android:src="@drawable/coupon_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10ssp"
                android:layout_toRightOf="@+id/img_coupon_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/black"
                    android:text="Get 25% supar cashback using Mobikwick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_10ssp"
                    android:text="Get 25% super cashback upto Rs. 50 on your order No code required"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/blue"
                    android:text="MORE DETAILS"
                    android:textSize="@dimen/_10ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/orange"
            android:text="APPLY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</layout>