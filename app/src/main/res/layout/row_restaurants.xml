<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_restaurant"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_1sdp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_row_restaurant"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_login"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_80sdp" />

                <TextView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    android:id="@+id/txt_name_row_restaurant"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/img_row_restaurant"
                    android:text="Gwalia Sweets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="@dimen/_1sdp"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/txt_address_row_restaurant"
                    android:layout_below="@+id/txt_name_row_restaurant"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/img_row_restaurant"
                    android:text="Indian Chinese"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

               <RelativeLayout
                   android:layout_marginTop="@dimen/_2sdp"
                   android:layout_marginBottom="@dimen/_2sdp"
                   android:id="@+id/rl_percentage"
                   android:layout_marginStart="@dimen/_10sdp"
                   android:layout_below="@+id/txt_address_row_restaurant"
                   android:layout_toRightOf="@+id/img_row_restaurant"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">


                   <ImageView
                       android:src="@drawable/percentage_icon"
                       android:id="@+id/img_percentage_row_restaurant"
                       android:layout_width="@dimen/_20sdp"
                       android:layout_height="@dimen/_20sdp" />



                   <TextView
                       android:layout_marginTop="@dimen/_2sdp"
                       android:textSize="@dimen/_10sdp"
                       android:textColor="@color/cofee"
                       android:layout_marginStart="@dimen/_5sdp"
                       android:text="25% off on all orders"
                       android:layout_toRightOf="@+id/img_percentage_row_restaurant"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
               </RelativeLayout>

                <View
                    android:id="@+id/view_row"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/img_row_restaurant"
                    android:layout_below="@+id/rl_percentage"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>

                <ImageView
                    android:src="@drawable/star_icon"
                    android:id="@+id/img_rate_row_restaurant"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/img_row_restaurant"
                    android:layout_below="@+id/view_row"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/txt_rate_row_restaurant"
                    android:text="4.1"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/img_rate_row_restaurant"
                    android:layout_below="@+id/view_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_time_row_restaurant"
                    android:text="45 mins"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/txt_rate_row_restaurant"
                    android:layout_below="@+id/view_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_rate_person_row_restaurant"
                    android:text="$450 for two"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/txt_time_row_restaurant"
                    android:layout_below="@+id/view_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>
</layout>