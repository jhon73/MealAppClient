<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/fg_home_card"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_1sdp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_home_restaurant"
        android:gravity="center"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp" />

        <TextView
            android:id="@+id/txt_home_restaurant_name"
            android:textSize="@dimen/_14ssp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Dana pani"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_home_restaurant_detail"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_10ssp"
            android:text="Pizza, fast food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/percentage_icon"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp" />

            <TextView
                android:id="@+id/txt_home_offer"
                android:textColor="@color/cofee"
                android:textSize="@dimen/_8ssp"
                android:text="30% off an order above"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/star_icon"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/txt_home_rate"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:textSize="@dimen/_7ssp"
                    android:text="3.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_home_time"
                android:layout_gravity="center"
                android:textSize="@dimen/_7ssp"
                android:text="44 mins"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_home_person_price"
                android:layout_marginStart="@dimen/_minus5sdp"
                android:textSize="@dimen/_7sdp"
                android:text="500 for two"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

              </LinearLayout>
    </android.support.v7.widget.CardView>
    <!--</LinearLayout>-->
    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>
</layout>